---
import StaffCarousel from "../ui/StaffCarousel.tsx";
import panel from "../../assets/panel.webp";

import { officialStaffList } from "../../constants/storeInfo.ts";

const staffList = await officialStaffList();
---

<section
  id="staff"
  class="relative pb-10 tracking-wider text-center overflow-hidden -mt-64 mb-8 pt-68"
>
  <img
    src={panel.src}
    alt="Wood paneling background"
    class="panel absolute z-[-2] bottom-0 w-full h-[80%] object-cover"
  />
  <h3
    class="inline-block px-4 md:px-5 py-3 md:py-4 font-bold text-4xl tracking-widest bg-[#7F0201] bg-opacity-80 text-white text-outline-white rounded-3xl"
    style={{ backdropFilter: "blur(35px)" }}
  >
    Meet Our Pack
  </h3>
  <div class="flex justify-center py-3 md:py-5">
    <StaffCarousel staffList={staffList} client:only="react" />
  </div>
</section>
