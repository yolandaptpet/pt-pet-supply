---
import Button from "../ui/Button.astro";
import sidebar from "../../assets/sidebar.webp";
---

<!-- Main container with Alpine.js logic -->
<div x-data="{ open: false }" class="relative overflow-x-hidden">
  <div class="hidden xl:flex font-bold lg:text-xl lg:space-x-4">
    <Button
      transition:animate="slide"
      text="Products"
      href="/#products"
      class="xl:pl-1 2xl:pl-3 no-underline"
    />
    <Button
      transition:animate="slide"
      text="Pet Grooming"
      href="/#grooming"
      class="xl:pl-1 2xl:pl-3 no-underline"
      data-astro-prefetch
    />
    <Button
      transition:animate="slide"
      text="Our Pack"
      href="/#staff"
      class="xl:pl-1 2xl:pl-3 no-underline"
    />
    <Button
      transition:animate="slide"
      text="Blog"
      href="/blog"
      class="xl:pl-1 2xl:pl-3 no-underline"
    />
  </div>

  <!-- Hamburger Icon for mobile screens -->
  <div class="xl:hidden">
    <button @click="open = true" class="p-2 sm:p-4">
      <svg
        class="w-8 h-8"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Sidebar controlled by Alpine.js -->
  <div
    x-show="open"
    x-cloak
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="translate-x-full"
    x-transition:enter-end="translate-x-0"
    x-transition:leave="transition ease-in duration-300"
    x-transition:leave-start="translate-x-0"
    x-transition:leave-end="translate-x-full"
    @click="open = false"
    class="fixed top-0 right-0 w-3/5 md:w-1/3 max-w-full h-full bg-white shadow-lg transform z-50 xl:w-64 overflow-hidden text-xl"
  >
    <img
      src={sidebar.src}
      alt="Barn panelling"
      class="absolute h-[100vh] w-[100vw] object-cover z-[-10] overflow-hidden"
    />
    <div class="p-2">
      <!-- Close button -->
      <button
        class="bg-[#7F0201] hover:bg-[#A52A2A] text-white font-bold p-1 rounded-xl"
      >
        <svg
          class="w-8 h-8"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      <!-- Sidebar Buttons -->
      <div class="mt-8 pl-4 flex flex-col items-center text-center space-y-4">
        <Button
          transition:animate="slide"
          text="Products"
          href="/#products"
          class="bg-[#7F0201] hover:bg-[#A52A2A] text-white font-bold w-[80%] pl-4 p-2 rounded-xl drop-shadow-2xl no-underline"
        />
        <Button
          transition:animate="slide"
          text="Pet Grooming"
          href="/#grooming"
          class="bg-[#7F0201] hover:bg-[#A52A2A] text-white font-bold w-[80%] pl-4 p-2 rounded-xl drop-shadow-2xl no-underline"
          data-astro-prefetch
        />
        <Button
          transition:animate="slide"
          text="Our Pack"
          href="/#staff"
          class="bg-[#7F0201] hover:bg-[#A52A2A] text-white font-bold w-[80%] pl-4 p-2 rounded-xl drop-shadow-2xl no-underline"
        />
        <Button
          transition:animate="slide"
          text="Blog"
          href="/blog"
          class="bg-[#7F0201] hover:bg-[#A52A2A] text-white font-bold w-[80%] pl-4 p-2 rounded-xl drop-shadow-2xl no-underline"
        />
      </div>
    </div>
  </div>

  <!-- Backdrop for mobile -->
  <div
    x-show="open"
    x-cloak
    x-transition.opacity
    @click="open = false"
    class="fixed inset-0 bg-black opacity-50 z-40"
  >
  </div>
</div>

<script is:inline src="//unpkg.com/alpinejs" defer></script>

<style>
  a[href^="#"] {
    scroll-margin-top: 80px;
  }
</style>
